{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [],
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": [
      "react",
      "node",
      "jest",
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "babel.config.js",
    "jest.config.js",
    "node_modules/**",
    "../../node_modules/**",
    "dist/**",
    "**/*.d.ts",
    "**/*.spec.ts"
  ],
  "include": [
    "src"
  ]
}
